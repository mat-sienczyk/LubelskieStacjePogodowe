<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="pl.sienczykm.templbn.db.model.SmogStationModel.SmogSensorType"/>

        <variable
                name="station"
                type="pl.sienczykm.templbn.db.model.SmogStationModel"/>
    </data>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_view_margin"
            app:cardCornerRadius="6dp"
            app:cardElevation="6dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                <TextView
                        android:id="@+id/name"
                        android:text="@{station.name, default=NAME}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"/>

                <TextView
                        android:id="@+id/date"
                        android:text="@{station.parsedDate, default=DATE}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"/>

                <TextView
                        android:id="@+id/distance"
                        android:text="@{station.parsedDistance, default=DISTANCE}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"/>

            </LinearLayout>

            <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:flexWrap="wrap"
                    app:justifyContent="space_evenly">

                <include
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        layout="@layout/smog_value_and_data"
                        app:sensor="@{SmogSensorType.PM25}"
                        app:station="@{station}"
                        app:unit="@{@string/microgram_per_cubic_metre}"/>

                <include
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        layout="@layout/smog_value_and_data"
                        app:sensor="@{SmogSensorType.PM10}"
                        app:station="@{station}"
                        app:unit="@{@string/microgram_per_cubic_metre}"/>

                <include
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        layout="@layout/smog_value_and_data"
                        app:sensor="@{SmogSensorType.O3}"
                        app:station="@{station}"
                        app:unit="@{@string/microgram_per_cubic_metre}"/>

                <include
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        layout="@layout/smog_value_and_data"
                        app:sensor="@{SmogSensorType.NO2}"
                        app:station="@{station}"
                        app:unit="@{@string/microgram_per_cubic_metre}"/>

            </com.google.android.flexbox.FlexboxLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
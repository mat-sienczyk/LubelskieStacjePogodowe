<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View"/>

        <variable
                name="sensor"
                type="pl.sienczykm.templbn.db.model.SmogStationModel.SmogSensorType"/>

        <variable
                name="station"
                type="pl.sienczykm.templbn.db.model.SmogStationModel"/>

    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="@{station.getValueAndQualityIndex(sensor) == null ? View.GONE : View.VISIBLE}"
            android:padding="5dp">

        <at.grabner.circleprogress.CircleProgressView
                android:id="@+id/circleView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cpv_autoTextSize="true"
                app:cpv_textMode="Value"
                app:cpv_innerContourSize="0dp"
                app:maxValue="@{sensor}"
                app:cpv_outerContourSize="0dp"
                app:cpv_showUnit="true"
                app:cpv_textScale="1"
                app:cpv_unit="ug/m3"
                app:cpv_unitPosition="bottom"
                app:cpv_unitScale="1"
                android:layout_gravity="center"
                app:cpv_barColor="@color/quality_very_good"
                app:cpv_barColor1="@color/quality_good"
                app:cpv_barColor2="@color/quality_moderate"
                app:cpv_barColor3="@color/quality_hazardous"
                app:cpv_rimColor="@color/shadow"
                app:circleData="@{station.getValueAndQualityIndex(sensor)}"/>

        <TextView
                android:text="@{sensor.paramKey}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:textSize="18sp"
                android:gravity="center"
                tools:text="PM2.5"/>
    </LinearLayout>
</layout>